<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SearchUserFragment"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_background"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        >

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Type your username"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight,TouchTargetSizeCheck,VisualLintTextFieldSize"
            android:autofillHints="" />

        <ImageButton
            android:id="@+id/searchImageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/search_button_background"
            android:contentDescription="TODO"
            android:paddingHorizontal="20dp"
            android:src="@android:drawable/ic_menu_search"
            tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchedUserRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        />

</LinearLayout>